<?xml version="1.0" encoding="UTF-8"?>
<!--created by Macabiau Frederic-->
<!--property tags-->
<odoo>
    <!--lists-->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.views.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree name="property offer" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="date_deadline"/>
                <field name="validity"/>
                <button name="estate_property_offer_action_Accept" type="object" title="Accept" icon="fa-check" attrs="{'invisible':[('status','!=',False)]}"/>
                <button name="estate_property_offer_action_Refuse" type="object" title="Refuse" icon="fa-times" attrs="{'invisible':[('status','!=',False)]}"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <!--forms-->
    <record id="estate_property_tags_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="validity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>