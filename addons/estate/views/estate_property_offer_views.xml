<!--property tags-->
<odoo>
    <!--lists-->
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.views.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree name="property offer">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <!--forms-->
    <record id="estate_property_tags_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="properties offer">
                <sheet>
                    <group>
                        <group>
                            <field name="price"/>
                            <field name="partner_id"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>