            <filds name="model">res.user</filds>
            <filds name="inherit_id" ref="base.view_users_form"/>
            <fields name="arch" type="xml">
                <form string="users">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Real Estate Properties">
