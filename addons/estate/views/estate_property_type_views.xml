<?xml version="1.0" encoding="utf-8"?>
<!--property_type-->
<odoo>
    <!--views-->
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.view.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="properties">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_count"/>
                            <field name="property_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Offers">
                            <field name="offer_count"/>
                            <group>
                                <field name="offer_ids"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">estate.property.type.view.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree name="property types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate.property.type.view.search</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <search string="estate property">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!--actions-->
    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Estate Property Type Main Action</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a property type
            </p>
        </field>
    </record>
</odoo>